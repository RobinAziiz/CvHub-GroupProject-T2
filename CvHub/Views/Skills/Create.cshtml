@using Data.Models
@using Shared
@model Shared.Models.SkillsModifyViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add Skills</h2>

@using (Html.BeginForm("Index", "Skills", FormMethod.Post, new { }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SkillName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SkillName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Profile", "Index", "MyProfilePage")
</div>
@using (Html.BeginForm("LeaveSkill", "Skills", FormMethod.Post, new {}))
{
    <div class="form-group">
        <label for="exampleSelect2" class="form-label mt-4" style="font-size: 2em">Your skills</label>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SkillName,
                new SelectList(@Model.currentSkillNames),
                "Select Skill")
        </div>
        <input type="submit" value="Remove" class="btn btn-primary" />
    </div>
}
    @using (Html.BeginForm("Index", "Skills", FormMethod.Post, new { }))
    {
        <div class="form-group">
            <label for="avalibleskillslist" class="form-label mt-4" style="font-size: 2em">Avalible skills</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SkillName,
                    new SelectList(@Model.avalibleSkillNames),
                    "Select Skill")
            </div>
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    }

    @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
