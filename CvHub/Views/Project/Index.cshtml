@using CvHub.Models
@using Data.Models
@model Shared.Models.ProjectListModels
@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>

@if (Request.IsAuthenticated)
{
    @Html.ActionLink("Create new", "Create", "Project", new {@class = "btn btn-lg btn-primary"})
}

@foreach (var project in Model.ProjectList)
{
<div class="card mb-3" style="margin: 10px 0 10px 0; box-shadow: 0 3px 10px rgb(0 0 0 / 0.2); border: none;">
    <h3 class="card-header">@project.Title</h3>
    <div class="card-body">
        <h5 class="card-title"></h5>
    </div>
    @{
            var imagepath = "/UploadedImages/" + project.ImagePath;
    }
    <div>
        <img style="display: flex; float: right; max-width: 45%;;"  src="@imagepath" class="d-block user-select-none" width="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size: 1.125rem; text-anchor: middle">
        <rect width="100%" height="100%" fill="#868e96"></rect>

        <div class="card-body" style="display: flex; float: left; width: 45%">
            <p class="card-text">
                @project.Description
            </p>
        </div>
    </div>
    <div class="card-body">
        @Html.ActionLink("More info","Details", "Project", new{id = project.Id}, new{@class="btn btn-primary"} )

    </div>
</div>

            }

